{
  "name": "adjust-heading-in-tree",
  "displayName": "Adjust Heading in Tree",
  "description": "Visual navigation and adjustment for Markdown and Typst headings.",
  "version": "0.3.3",
  "publisher": "ffy6511",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "resources/icons/logo.png",
  "repository": {
    "url": "https://github.com/ffy6511/Adjust-heading-in-tree"
  },
  "categories": [
    "Formatters",
    "Notebooks",
    "Visualization"
  ],
  "keywords": [
    "Markdown",
    "Typst",
    "TOC",
    "Tags"
  ],
  "activationEvents": [
    "onCommand:headingNavigator.adjustTreeLevel",
    "onCommand:headingNavigator.moveHeadingDown",
    "onCommand:headingNavigator.moveHeadingUp",
    "onCommand:headingNavigator.reveal",
    "onCommand:headingNavigator.shiftDown",
    "onCommand:headingNavigator.shiftUp",
    "onCommand:headingNavigator.showHelp",
    "onCommand:headingNavigator.toggle",
    "onCommand:headingNavigator.openExportMenu",
    "onCommand:headingNavigator.openExportSettings",
    "onCommand:headingNavigator.editExtraImportsSetting",
    "onCommand:headingNavigator.filterToSubtree",
    "onCommand:headingNavigator.deleteHeading",
    "onCommand:headingNavigator.clearFilter",
    "onCommand:headingNavigator.showTagViewHelp",
    "onView:headingNavigator.headingTree",
    "onView:headingNavigator.tagView"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo 'no lint task yet'",
    "test": "echo 'no tests yet'",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^18.17.0",
    "@types/vscode": "^1.85.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "headingNavigator",
          "title": "AHT",
          "icon": "resources/icons/logo.svg"
        }
      ]
    },
    "views": {
      "headingNavigator": [
        {
          "id": "headingNavigator.headingTree",
          "name": "TOC View"
        },
        {
          "id": "headingNavigator.tagView",
          "name": "Tag View",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "headingNavigator.openExportMenu",
        "title": "Export Heading Subtree",
        "icon": "$(file-pdf)"
      },
      {
        "command": "headingNavigator.openExportSettings",
        "title": "Adjust Export Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "headingNavigator.editExtraImportsSetting",
        "title": "Edit Extra Typst Imports",
        "icon": "$(edit)"
      },
      {
        "command": "headingNavigator.toggle",
        "title": "Toggle Heading Navigator"
      },
      {
        "command": "headingNavigator.shiftUp",
        "title": "Shift Selected Headings Up",
        "icon": "$(triangle-left)"
      },
      {
        "command": "headingNavigator.shiftDown",
        "title": "Shift Selected Headings Down",
        "icon": "$(triangle-right)"
      },
      {
        "command": "headingNavigator.moveHeadingUp",
        "title": "Move Heading Up Within Parent",
        "icon": "$(fold-up)"
      },
      {
        "command": "headingNavigator.moveHeadingDown",
        "title": "Move Heading Down Within Parent",
        "icon": "$(fold-down)"
      },
      {
        "command": "headingNavigator.reveal",
        "title": "Reveal Heading In Editor"
      },
      {
        "command": "headingNavigator.adjustTreeLevel",
        "title": "TOC Level",
        "icon": "$(list-tree)"
      },
      {
        "command": "headingNavigator.showHelp",
        "title": "TOC Help",
        "icon": "$(question)"
      },
      {
        "command": "headingNavigator.filterToSubtree",
        "title": "Filter to Subtree",
        "icon": "$(filter)"
      },
      {
        "command": "headingNavigator.deleteHeading",
        "title": "Delete Heading Block",
        "icon": "$(trash)"
      },
      {
        "command": "headingNavigator.clearFilter",
        "title": "Clear Subtree Filter",
        "icon": "$(close)"
      },
      {
        "command": "headingNavigator.filterToAncestor",
        "title": "Filter to Ancestor Heading"
      },
      {
        "command": "headingNavigator.openHoverSettings",
        "title": "Configure Hover Toolbar",
        "icon": "$(tools)"
      },
      {
        "command": "headingNavigator.editTags",
        "title": "Edit Tags",
        "icon": "$(tag)"
      },
      {
        "command": "headingNavigator.refreshTags",
        "title": "Refresh Tags",
        "icon": "$(refresh)"
      },
      {
        "command": "headingNavigator.toggleTagScope",
        "title": "Toggle Tag Scope (Current File / Workspace)",
        "icon": "$(file)"
      },
      {
        "command": "headingNavigator.toggleTagSelection",
        "title": "Toggle Tag Selection Mode"
      },
      {
        "command": "headingNavigator.showTagViewHelp",
        "title": "Tag View Help",
        "icon": "$(question)"
      },
      {
        "command": "headingNavigator.manageTagDefinitions",
        "title": "Manage Tags",
        "icon": "$(settings-gear)"
      }
    ],
    "keybindings": [
      {
        "command": "headingNavigator.toggle",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "headingNavigator.shiftUp",
        "key": "ctrl+shift+left",
        "mac": "cmd+shift+left",
        "when": "focusedView == headingNavigator.headingTree"
      },
      {
        "command": "headingNavigator.shiftDown",
        "key": "ctrl+shift+right",
        "mac": "cmd+shift+right",
        "when": "focusedView == headingNavigator.headingTree"
      },
      {
        "command": "headingNavigator.moveHeadingUp",
        "key": "ctrl+shift+up",
        "mac": "cmd+shift+up",
        "when": "focusedView == headingNavigator.headingTree"
      },
      {
        "command": "headingNavigator.moveHeadingDown",
        "key": "ctrl+shift+down",
        "mac": "cmd+shift+down",
        "when": "focusedView == headingNavigator.headingTree"
      },
      {
        "command": "headingNavigator.clearFilter",
        "key": "ctrl+alt+0",
        "mac": "cmd+option+0",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "headingNavigator.clearFilter",
          "when": "view == headingNavigator.headingTree && headingNavigator.isFiltered",
          "group": "navigation@0",
          "icon": "$(close)"
        },
        {
          "command": "headingNavigator.showHelp",
          "when": "view == headingNavigator.headingTree",
          "group": "navigation@1"
        },
        {
          "command": "headingNavigator.adjustTreeLevel",
          "when": "view == headingNavigator.headingTree",
          "group": "navigation@2"
        },
        {
          "command": "headingNavigator.openExportSettings",
          "when": "view == headingNavigator.headingTree",
          "group": "navigation@3"
        },
        {
          "command": "headingNavigator.openHoverSettings",
          "when": "view == headingNavigator.headingTree",
          "group": "navigation@4"
        },
        {
          "command": "headingNavigator.showTagViewHelp",
          "when": "view == headingNavigator.tagView",
          "group": "navigation@1"
        },
        {
          "command": "headingNavigator.manageTagDefinitions",
          "when": "view == headingNavigator.tagView",
          "group": "navigation@2"
        },
        {
          "command": "headingNavigator.refreshTags",
          "when": "view == headingNavigator.tagView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "headingNavigator.editTags",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.0 == 'editTags'",
          "group": "inline@0"
        },
        {
          "command": "headingNavigator.editTags",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.1 == 'editTags'",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.editTags",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.2 == 'editTags'",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.editTags",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.3 == 'editTags'",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.editTags",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.4 == 'editTags'",
          "group": "inline@4"
        },
        {
          "command": "headingNavigator.editTags",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.5 == 'editTags'",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.shiftUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.0 == 'shiftUp'",
          "group": "inline@0"
        },
        {
          "command": "headingNavigator.shiftUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.1 == 'shiftUp'",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.shiftUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.2 == 'shiftUp'",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.shiftUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.3 == 'shiftUp'",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.shiftUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.4 == 'shiftUp'",
          "group": "inline@4"
        },
        {
          "command": "headingNavigator.shiftUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.5 == 'shiftUp'",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.shiftDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.0 == 'shiftDown'",
          "group": "inline@0"
        },
        {
          "command": "headingNavigator.shiftDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.1 == 'shiftDown'",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.shiftDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.2 == 'shiftDown'",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.shiftDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.3 == 'shiftDown'",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.shiftDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.4 == 'shiftDown'",
          "group": "inline@4"
        },
        {
          "command": "headingNavigator.shiftDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.5 == 'shiftDown'",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.moveHeadingUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.0 == 'moveHeadingUp'",
          "group": "inline@0"
        },
        {
          "command": "headingNavigator.moveHeadingUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.1 == 'moveHeadingUp'",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.moveHeadingUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.2 == 'moveHeadingUp'",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.moveHeadingUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.3 == 'moveHeadingUp'",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.moveHeadingUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.4 == 'moveHeadingUp'",
          "group": "inline@4"
        },
        {
          "command": "headingNavigator.moveHeadingUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.5 == 'moveHeadingUp'",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.moveHeadingDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.0 == 'moveHeadingDown'",
          "group": "inline@0"
        },
        {
          "command": "headingNavigator.moveHeadingDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.1 == 'moveHeadingDown'",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.moveHeadingDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.2 == 'moveHeadingDown'",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.moveHeadingDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.3 == 'moveHeadingDown'",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.moveHeadingDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.4 == 'moveHeadingDown'",
          "group": "inline@4"
        },
        {
          "command": "headingNavigator.moveHeadingDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.5 == 'moveHeadingDown'",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.deleteHeading",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.0 == 'deleteHeading'",
          "group": "inline@0"
        },
        {
          "command": "headingNavigator.deleteHeading",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.1 == 'deleteHeading'",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.deleteHeading",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.2 == 'deleteHeading'",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.deleteHeading",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.3 == 'deleteHeading'",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.deleteHeading",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.4 == 'deleteHeading'",
          "group": "inline@4"
        },
        {
          "command": "headingNavigator.deleteHeading",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.5 == 'deleteHeading'",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.filterToSubtree",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.0 == 'filterToSubtree'",
          "group": "inline@0"
        },
        {
          "command": "headingNavigator.filterToSubtree",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.1 == 'filterToSubtree'",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.filterToSubtree",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.2 == 'filterToSubtree'",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.filterToSubtree",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.3 == 'filterToSubtree'",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.filterToSubtree",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.4 == 'filterToSubtree'",
          "group": "inline@4"
        },
        {
          "command": "headingNavigator.filterToSubtree",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.5 == 'filterToSubtree'",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.openExportMenu",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.0 == 'openExportMenu'",
          "group": "inline@0"
        },
        {
          "command": "headingNavigator.openExportMenu",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.1 == 'openExportMenu'",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.openExportMenu",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.2 == 'openExportMenu'",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.openExportMenu",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.3 == 'openExportMenu'",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.openExportMenu",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.4 == 'openExportMenu'",
          "group": "inline@4"
        },
        {
          "command": "headingNavigator.openExportMenu",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.hoverButton.5 == 'openExportMenu'",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.filterToSubtree",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading",
          "group": "navigation@1"
        },
        {
          "command": "headingNavigator.clearFilter",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.isFiltered",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Adjust Heading in Tree",
      "properties": {
        "adjustHeadingInTree.tags.definitions": {
          "type": "array",
          "default": [
            {
              "name": "TODO",
              "color": "charts.orange",
              "icon": "circle-large-outline",
              "pinned": false
            },
            {
              "name": "Review",
              "color": "charts.yellow",
              "icon": "eye",
              "pinned": false
            },
            {
              "name": "Highlight",
              "color": "charts.blue",
              "icon": "star",
              "pinned": false
            }
          ],
          "description": "Custom definitions for tags including color and icon.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "color": {
                "type": "string"
              },
              "icon": {
                "type": "string"
              },
              "pinned": {
                "type": "boolean",
                "default": false,
                "description": "Whether this tag should be pinned to the top of Tag View."
              }
            }
          }
        },
        "adjustHeadingInTree.behavior.autoClearFilterOnCursorMove": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically clear the subtree filter when the cursor moves to a heading outside of the filtered view.",
          "scope": "window"
        },
        "adjustHeadingInTree.export.extraImportsFile": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to a Typst file whose contents will be prepended to every exported subtree. Use the [Edit Extra Typst Imports](command:headingNavigator.editExtraImportsSetting) command to create or edit this file.",
          "scope": "window"
        },
        "adjustHeadingInTree.export.pngPpi": {
          "type": "integer",
          "default": 144,
          "minimum": 1,
          "maximum": 1200,
          "markdownDescription": "Default rasterization resolution (ppi) used when exporting a subtree as a merged PNG via Tinymist.",
          "scope": "window"
        },
        "adjustHeadingInTree.view.hoverToolbar": {
          "type": "array",
          "default": [
            "editTags",
            "filterToSubtree",
            "deleteHeading"
          ],
          "items": {
            "type": "string",
            "enum": [
              "shiftUp",
              "shiftDown",
              "moveHeadingUp",
              "moveHeadingDown",
              "filterToSubtree",
              "openExportMenu",
              "editTags",
              "deleteHeading"
            ]
          },
          "order": 999,
          "isHidden": true,
          "markdownDescription": "**Deprecated**: Use the 'Configure Hover Toolbar' command instead. This setting is managed through the webview interface.",
          "scope": "window"
        }
      }
    }
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43"
  }
}
