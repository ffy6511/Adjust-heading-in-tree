{
  "name": "adjust-heading-in-tree",
  "displayName": "Adjust Heading in Tree",
  "description": "Visual navigation and adjustment for Markdown and Typst headings.",
  "version": "0.1.1",
  "publisher": "ffy6511",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "resources/icons/logo.png",
  "repository": {
    "url": "https://github.com/ffy6511/Adjust-heading-in-tree"
  },
  "categories": [
    "Formatters",
    "Notebooks"
  ],
  "keywords": [
    "markdown",
    "typst",
    "headings",
    "navigation"
  ],
  "activationEvents": [
    "onCommand:headingNavigator.adjustTreeLevel",
    "onCommand:headingNavigator.moveHeadingDown",
    "onCommand:headingNavigator.moveHeadingUp",
    "onCommand:headingNavigator.reveal",
    "onCommand:headingNavigator.shiftDown",
    "onCommand:headingNavigator.shiftUp",
    "onCommand:headingNavigator.showHelp",
    "onCommand:headingNavigator.toggle",
    "onCommand:headingNavigator.openExportMenu",
    "onCommand:headingNavigator.openExportSettings",
    "onCommand:headingNavigator.editExtraImportsSetting",
    "onView:headingNavigator.headingTree"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo 'no lint task yet'",
    "test": "echo 'no tests yet'",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^18.17.0",
    "@types/vscode": "^1.85.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "headingNavigator",
          "title": "AHT",
          "icon": "resources/icons/logo.svg"
        }
      ]
    },
    "views": {
      "headingNavigator": [
        {
          "id": "headingNavigator.headingTree",
          "name": "Adjust Heading Tree"
        }
      ]
    },
    "commands": [
      {
        "command": "headingNavigator.openExportMenu",
        "title": "Export Heading Subtree",
        "icon": "$(gear)"
      },
      {
        "command": "headingNavigator.openExportSettings",
        "title": "Adjust Export Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "headingNavigator.editExtraImportsSetting",
        "title": "Edit Extra Typst Imports",
        "icon": "$(edit)"
      },
      {
        "command": "headingNavigator.toggle",
        "title": "Toggle Heading Navigator"
      },
      {
        "command": "headingNavigator.shiftUp",
        "title": "Shift Selected Headings Up",
        "icon": "$(triangle-left)"
      },
      {
        "command": "headingNavigator.shiftDown",
        "title": "Shift Selected Headings Down",
        "icon": "$(triangle-right)"
      },
      {
        "command": "headingNavigator.moveHeadingUp",
        "title": "Move Heading Up Within Parent",
        "icon": "$(fold-up)"
      },
      {
        "command": "headingNavigator.moveHeadingDown",
        "title": "Move Heading Down Within Parent",
        "icon": "$(fold-down)"
      },
      {
        "command": "headingNavigator.reveal",
        "title": "Reveal Heading In Editor"
      },
      {
        "command": "headingNavigator.adjustTreeLevel",
        "title": "Adjust Heading Tree Level",
        "icon": "$(list-tree)"
      },
      {
        "command": "headingNavigator.showHelp",
        "title": "Adjust Heading Tree Help",
        "icon": "$(question)"
      }
    ],
    "keybindings": [
      {
        "command": "headingNavigator.toggle",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "headingNavigator.shiftUp",
        "key": "ctrl+shift+left",
        "mac": "cmd+shift+left",
        "when": "focusedView == headingNavigator.headingTree"
      },
      {
        "command": "headingNavigator.shiftDown",
        "key": "ctrl+shift+right",
        "mac": "cmd+shift+right",
        "when": "focusedView == headingNavigator.headingTree"
      },
      {
        "command": "headingNavigator.moveHeadingUp",
        "key": "ctrl+shift+up",
        "mac": "cmd+shift+up",
        "when": "focusedView == headingNavigator.headingTree"
      },
      {
        "command": "headingNavigator.moveHeadingDown",
        "key": "ctrl+shift+down",
        "mac": "cmd+shift+down",
        "when": "focusedView == headingNavigator.headingTree"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "headingNavigator.showHelp",
          "when": "view == headingNavigator.headingTree",
          "group": "navigation@1"
        },
        {
          "command": "headingNavigator.adjustTreeLevel",
          "when": "view == headingNavigator.headingTree",
          "group": "navigation@2"
        },
        {
          "command": "headingNavigator.openExportSettings",
          "when": "view == headingNavigator.headingTree",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "headingNavigator.openExportMenu",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading",
          "group": "inline@5"
        },
        {
          "command": "headingNavigator.shiftUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.showHoverArrows",
          "group": "inline@1"
        },
        {
          "command": "headingNavigator.shiftDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.showHoverArrows",
          "group": "inline@2"
        },
        {
          "command": "headingNavigator.moveHeadingUp",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.showHoverArrows",
          "group": "inline@3"
        },
        {
          "command": "headingNavigator.moveHeadingDown",
          "when": "view == headingNavigator.headingTree && viewItem == headingNavigator.heading && headingNavigator.showHoverArrows",
          "group": "inline@4"
        }
      ]
    },
    "configuration": {
      "title": "Adjust Heading in Tree",
      "properties": {
        "adjustHeadingInTree.view.showHoverArrows": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show inline adjustment arrows when hovering over items in the heading tree.",
          "scope": "window"
        },
        "adjustHeadingInTree.export.extraImportsFile": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to a Typst file whose contents will be prepended to every exported subtree. Use the [Edit Extra Typst Imports](command:headingNavigator.editExtraImportsSetting) command to create or edit this file.",
          "scope": "window"
        },
        "adjustHeadingInTree.export.pngPpi": {
          "type": "integer",
          "default": 144,
          "minimum": 1,
          "maximum": 1200,
          "markdownDescription": "Default rasterization resolution (ppi) used when exporting a subtree as a merged PNG via Tinymist.",
          "scope": "window"
        }
      }
    }
  }
}
